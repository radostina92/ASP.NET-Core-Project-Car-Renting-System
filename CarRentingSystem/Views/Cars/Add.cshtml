@model AddCarFormModel
@{
    ViewData["Title"] = "Add Car";
}

<h2 class="heading-margin">Add Car</h2>
<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-8 col-sm-12">
            <form method="post">
<div class="mb-3">
  <label asp-for="Brand" class="form-label"></label>
  <input asp-for="Brand" class="form-control"  placeholder="BMW, Mercedez, etc..">
  <span asp-validation-for="Brand" class="invalid-feedback text-danger">Please provide a valid Brand</span>
</div>
<div class="mb-3">
  <label asp-for="Model" class="form-label"></label>
  <input asp-for="Model" class="form-control"  placeholder="640D, S-class, etc...">
  <span asp-validation-for="Model" class="invalid-feedback text-danger">Please provide a valid Model</span>
</div>
<div class="mb-3">
  <label asp-for="Description" class="form-label"></label>
  <textarea class="form-control" placeholder="This is a perfect car..." rows="3"></textarea>
  <span asp-validation-for="Description" class="invalid-feedback text-danger">Please provide a valid Description</span>
</div>
<div class="mb-3">
  <label asp-for="ImageUrl" class="form-label"></label>
  <input asp-for="ImageUrl" class="form-control"  placeholder="">
  <span asp-validation-for="ImageUrl" class="invalid-feedback text-danger">Please provide a valid Image URL</span>
</div>
<div class="mb-3">
  <label asp-for="Year" class="form-label"></label>
  <input asp-for="Year" class="form-control"  placeholder="@DateTime.UtcNow.Year">
  <span asp-validation-for="Year" class="invalid-feedback text-danger">Please provide a valid Year</span>
</div>
<label asp-for="CategoryId"></label> 
<select asp-for="CategoryId" class="form-select">
@foreach(var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
<input class="btn btn-primary" type="submit" value="Save"/>
</form>
        </div>
    </div>
</div>